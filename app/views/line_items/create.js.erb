$('#notice').hide();

var render_and_highlight_cart = function() {
  $('#cart').html("<%= escape_javascript render(@cart) %>");

  $('#current_item')
    .css({'background-color': '#88ff88'})
    .animate({'background-color': '#114411'}, 1000);
};

if ($('#cart tr').length == 1) {
  $('#cart').show('blind', 1000, render_and_highlight_cart);
}
else {
  render_and_highlight_cart();
}
